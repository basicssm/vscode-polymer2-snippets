{
  "p-webcomponent": {
    "prefix": "p-webcomponent",
    "description": "Polymer web component",
    "body": [
      "<link rel=\"import\" href=\"../bower_components/polymer/polymer-element.html\">",
      "",
      "<!--",
      "`<${1:Name}>` is ${2:Description}",
      "",
      "@element ${1:Name}",
      "-->",
      "<dom-module id=\"${1:Name}-element\">",
      "\t<template>",
      "\t\t<style>",
      "\t\t\t:host {",
      "\t\t\t\tdisplay: block",
      "\t\t\t}",
      "\t\t</style>",
      "",
      "\t\t$0",
      "",
      "\t</template>",
      "",
      "\t<script>",
      "\t\tclass ${1:Name}Element extends Polymer.Element {",
      "",
      "\t\t\tstatic get is() { return '${1:Name}-element'; }",
      "",
      "\t\t\tstatic get properties() {",
      "\t\t\t\treturn {",
      "\t\t\t\t\t",
      "\t\t\t\t};",
      "\t\t\t}",
      "",
      "\t\t\tconstructor() {",
      "\t\t\t\tsuper();",
      "\t\t\t}",
      "",
      "\t\t\tready() {",
      "\t\t\t\tsuper.ready();",
      "",
      "\t\t\t\tPolymer.RenderStatus.afterNextRender(this, function() {",
      "\t\t\t\t\t",
      "\t\t\t\t});",
      "\t\t\t}",
      "",
      "\t\t}",
      "",
      "\t\twindow.customElements.define(${1:Name}Element.is, ${1:Name}Element);",
      "\t</script>",
      "</dom-module>"
    ]
  },
  "p-slot": {
    "prefix": "p-slot",
    "description": "Add a Shadow DOM <slot>",
    "body": [
      "<slot name=\"$0\"></slot>"
    ]
  },
  "p-dom-repeat-inside": {
    "prefix": "p-dom-repeat-inside",
    "description": "Add dom-repeat inside a Polymer element",
    "body": [
      "<template is=\"dom-repeat\" items=\"{{$1}}\" as=\"$0\">",
      "",
      "</template>"
    ]
  },
  "p-dom-if": {
    "prefix": "p-dom-if",
    "description": "Add dom-if inside a Polymer element",
    "body": [
      "<template is=\"dom-if\" if=\"{{$0}}\">",
      "",
      "</template>"
    ]
  },
  "p-mixin": {
    "prefix": "p-mixin",
    "description": "Create a mixin class.",
    "body": [
      "<script>",
      "",
      "\t/**",
      "\t * ",
      "\t * @summary ", 
      "\t * @polymer ",
      "\t * @mixinFunction",
      "\t */",
      "\tconst ${1:ClassName} = superclass => class extends superclass {",
      "\t\t$0",
      "\t}",
      "",
      "</script>"
    ]
  },
  "p-mixin-dedup": {
    "prefix": "p-mixin-dedup",
    "description": "Create a mixin class that utilizes Polymer.dedupingMixin()",
    "body": [
      "<link rel=\"import\" href=\"../bower_components/polymer/lib/utils/mixin.html\">",
      "",
      "<script>",
      "(function() {",
      "\t'use strict';",
      "",
      "\t/**",
      "\t * ",
      "\t * @summary ", 
      "\t * @polymer ",
      "\t * @mixinFunction",
      "\t */",
      "\t${1:ClassName} = Polymer.dedupingMixin(superClass => {",
      "\t\t/**",
      "\t\t * @polymerMixinClass",
      "\t\t * @implements { }",
      "\t\t */",
      "\t\tclass ${1:ClassName} extends superClass {",
      "\t\t\t$0",
      "\t\t}",
      "\t\treturn ${1:ClassName};",
      "\t});",
      "",
      "})();",
      "</script>"
    ]
  }
}
